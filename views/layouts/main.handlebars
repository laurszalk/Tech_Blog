<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-space-between align-center p-2">
        <nav>
          <ul>
          <li><a href="/" class="header">Tech Blog</a></li>
          <li><a href="/" class="navLink">Home</a></li>
          <li><a href="/dashboard" class="navLink">Dashboard</a></li>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <li><button class="no-button" id="logout">Log out</button></li>
          {{else}}
            <li><a href="/login" class="navLink">Log in</a>
          {{/if}}
          </ul>
        </nav>
      </header>
      <main class="container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>